<p id="notice"><%= notice %></p>
<div class="row">
	<div class="col-md-12">
		<div class="post_img_original">
			<%= link_to image_tag @post.image.url(:medium)%>
		</div>
	</div>
</div>
<br>
<p>
  
  <%= @post.title %>
</p>
<p>
  <strong>by:</strong>
  <%= @post.user.name %>
</p>
<p>	
	<%= link_to 'Show', post_path %>
	<%= link_to 'Edit', edit_post_path(@post) %>
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>	

<%= link_to 'Back', posts_path, class: "btn btn-success" %>
